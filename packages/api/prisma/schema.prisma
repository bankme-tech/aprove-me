generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Payable {
  id           String   @id @default(uuid())
  value        Float
  emissionDate DateTime @default(now())
  assignorId   String
  assignor     Assignor @relation(fields: [assignorId], references: [id])

  @@map("payables")
}

model Assignor {
  id       String    @id @default(uuid())
  name     String
  email    String    @unique
  phone    String
  document String
  payables Payable[]

  @@map("assignors")
}

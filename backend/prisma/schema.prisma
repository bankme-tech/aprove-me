generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Assignor {
  id       String   @id @default(uuid())
  document String   
  email    String  
  phone    String?  
  name     String   
  payables Payable[]
}

model Payable {
  id           String   @id @default(uuid())
  value        Float
  emissionDate DateTime @default(now())
  assignorId   String
  assignor     Assignor @relation(fields: [assignorId], references: [id])
  userPayables UserPayable[]
}

model User {
  id       String   @id @default(uuid())
  email    String   @unique
  password String
  userPayables UserPayable[]
}

model UserPayable { 
  id         String  @id @default(uuid())
  userId     String
  payableId  String
  user       User    @relation(fields: [userId], references: [id])
  payable    Payable @relation(fields: [payableId], references: [id])

  @@unique([userId, payableId])
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}


model Payable {
  id           String   @id @default(uuid())
  // description  String
  amount       Float
  emissionDate DateTime
  assignorId   String
  assignor     Assignor @relation(fields: [assignorId], references: [id], onDelete: Cascade)
}

model Assignor {
  id       String     @id @default(uuid())
  name     String     // @db.VarChar(140) // varchar(140) // Native type VarChar is not supported for sqlite connector.Prisma
  document String     // @db.VarChar(30)  // varchar(30)
  email    String     // @db.VarChar(140) // varchar(140)
  phone    String     // @db.VarChar(20)  // varchar(20)
  payables Payable[]
}


model User {
  id       String @id @default(uuid())
  email    String @unique
  password String
}

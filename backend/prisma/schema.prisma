generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Assignor {
  id       String    @id @default(uuid())
  document String
  email    String
  phone    String
  name     String
  Payable  Payable[]
}

model Payable {
  id           String   @id @default(uuid())
  value        Float
  emissionDate DateTime @default(now())
  assignorId   String
  assignor     Assignor @relation(fields: [assignorId], references: [id])
}

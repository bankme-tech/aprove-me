// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Payable {
  id          String   @id @default(uuid())
  description String
  amount      Float
  dueDate     DateTime
  assignorId  String
  assignor    Assignor @relation(fields: [assignorId], references: [id], onDelete: Cascade)
}

model Assignor {
  id       String     @id @default(uuid())
  name     String
  payables Payable[]
}

model User {
  id String @id @default(uuid())
  email String @unique
  password String
}
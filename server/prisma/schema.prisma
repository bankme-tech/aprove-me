generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            Int     @default(autoincrement()) @id
  name          String 
  email         String     @unique
  password      String 

  @@map("users")
}

model Recebivel {
  id            String     @default(uuid()) @id
  value         Float 
  emission_date DateTime
  cedente       Cedente @relation(fields: [id_assignor], references: [id])
  id_assignor   String 

  @@map("payables")
}

model Cedente {
  id            String     @default(uuid()) @id
  document      String     
  email         String     @unique   
  phone         String     
  name          String   
  recebivel Recebivel[] 

  @@map("assignors")
}


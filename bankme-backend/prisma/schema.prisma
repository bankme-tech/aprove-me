generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Payable {
  id           String   @id @default(uuid())
  value        Float
  emissionDate DateTime
  Assignor     Assignor @relation(fields: [assignorId], references: [id])
  assignorId   String
}

model Assignor {
  id       String    @id @default(uuid())
  document String
  email    String    @unique
  phone    String    @unique
  name     String
  payables Payable[]
}

model User {
  id       String @id @default(uuid())
  login    String @unique
  password String
}

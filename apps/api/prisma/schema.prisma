generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid())
  email     String     @unique
  password  String
  name      String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  payables  Payable[]
  assignors Assignor[]

  @@map("users")
}

model Assignor {
  id       String    @id @default(uuid())
  document String    @unique
  email    String    @unique
  phone    String    @unique
  name     String
  Payable  Payable[]
  User     User      @relation(fields: [userId], references: [id])
  userId   String

  @@map("assignors")
}

model Payable {
  id           String   @id @default(uuid())
  value        Float
  emissionDate DateTime
  assignor     Assignor @relation(fields: [assignorId], references: [id])
  assignorId   String

  User   User   @relation(fields: [userId], references: [id])
  userId String

  @@map("payables")
}

{
  "name": "@aprove-me/server",
  "version": "1.0.0",
  "author": "Gabriel Duarte <jds.gabrielduarte@gmail.com>",
  "license": "ISC",
  "scripts": {
    "build": "pnpm load:env nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "pnpm load:env nest start --watch",
    "start:debug": "pnpm load:env nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "vitest run",
    "test:watch": "pnpm load:env vitest",
    "test:cov": "pnpm load:env vitest run --coverage",
    "test:debug": "pnpm load:env vitest --inspect-brk --inspect --logHeapUsage --threads=false",
    "test:e2e": "pnpm load:env vitest run --config ./vitest.config.e2e.ts",
    "test:e2e:watch": "pnpm load:env vitest --config ./vitest.config.e2e.ts",
    "load:env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@aprove-me/eslint-config": "link:../../packages/eslint-config",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/terminus": "^10.2.3",
    "@prisma/client": "^5.14.0",
    "bcrypt": "^5.1.1",
    "dotenv-cli": "^7.4.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "zod": "^3.23.8",
    "zod-validation-error": "^3.3.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-vitest-globals": "^1.5.0",
    "prettier": "^3.0.0",
    "prisma": "^5.14.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3",
    "unplugin-swc": "^1.4.5",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.6.0"
  }
}
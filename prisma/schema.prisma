datasource db {
  provider = "sqlite"
  url = "file:sqlite.db"
}

generator client {
  provider = "prisma-client-js"
}

model Payable {
  id String @id @default(uuid())
  value Float
  emissionDate DateTime
  assignorId String
  assignor Assignor @relation(fields: [assignorId], references: [id])
}

model Assignor {
  id String @id @default(uuid())
  document String
  email String
  phone String
  name String
  payables Payable[]
}

model Permission {
  id String @id @default(uuid())
  login String
  password String
}

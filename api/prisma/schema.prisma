generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Payable {
  id String  @default(uuid()) @id
  value Float
  emissionDate DateTime
  assignor String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("payables")
}

model Assignor {
  id String  @default(uuid()) @id
  document String
  email String
  phone String
  name String
  password String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("assignors")
}

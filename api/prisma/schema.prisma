datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Payable {
  id          String   @id @default(uuid())
  value       Float
  emissionDate DateTime @default(now())
  assignorId    String
  assignor  Assignor @relation(fields: [assignorId], references: [id])
}

model Assignor {
  id       String    @id @default(uuid())
  document String   @unique
  name     String
  email    String
  phone    String
  Payable  Payable[]
}

model User {
  id       String @id @default(uuid())
  login    String @unique
  password String
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Payable {
  id          String   @id @default(uuid())
  value       Float
  emissionDate DateTime @default(now())
  assignor    Assignor @relation(fields: [assignorId], references: [id])
  assignorId  String
}

{
    "name": "nestjs-prisma",
    "version": "0.0.1",
    "description": "A NestJS project integrated with Prisma",
    "author": "Willer Santos",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main.js",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
        "lint:fix": "eslint --fix",
        "generate-schema": "cat src/*/*.prisma > prisma/base.prisma",
        "migrate": "npm run generate-schema && prisma migrate dev --schema=./prisma/base.prisma --name \"${npm_config_name}\" && npm run prisma:generate",
        "prisma:generate": "prisma-multischema",
        "prisma:migrate": "prisma migrate dev --name init",
        "prisma:studio": "prisma studio",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "dependencies": {
        "@nestjs/common": "^10.1.2",
        "@nestjs/config": "^3.2.2",
        "@nestjs/core": "^10.1.2",
        "@nestjs/platform-express": "^10.1.2",
        "@prisma/client": "^5.14.0",
        "body-parser": "^1.20.2",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "helmet": "^7.1.0",
        "jsonwebtoken": "^9.0.2",
        "prisma-multischema": "^1.1.4",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.8.1"
    },
    "devDependencies": {
        "@babel/core": "^7.24.6",
        "@babel/plugin-proposal-decorators": "^7.24.6",
        "@babel/preset-env": "^7.24.6",
        "@babel/preset-typescript": "^7.24.6",
        "@nestjs/cli": "^10.1.10",
        "@nestjs/schematics": "^10.0.1",
        "@nestjs/testing": "^10.3.8",
        "@types/body-parser": "^1.19.5",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.5.12",
        "@types/jsonwebtoken": "^9.0.6",
        "@types/node": "^18.15.11",
        "@types/passport-local": "^1.0.35",
        "@types/supertest": "^6.0.2",
        "@typescript-eslint/eslint-plugin": "^5.57.0",
        "@typescript-eslint/parser": "^5.57.0",
        "babel-jest": "^29.7.0",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-import-resolver-typescript": "^3.6.1",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-prettier": "^4.2.1",
        "jest": "^29.7.0",
        "prettier": "^2.8.7",
        "prisma": "^5.14.0",
        "supertest": "^6.3.4",
        "ts-jest": "^29.1.4",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.1.3"
    }
}
